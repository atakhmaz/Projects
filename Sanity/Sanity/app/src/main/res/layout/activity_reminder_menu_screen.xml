<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_reminder_menu"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:dividerHeight="@dimen/main_menu_divider_height">

    <!--
        This Text view shows "OverCategorydget" for the overcategorydget section
    -->
    <TextView android:id="@+id/reminder_menu_text"
        android:duplicateParentState="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/row_padding_size"
        android:paddingRight="@dimen/row_padding_size"
        android:paddingTop="@dimen/row_bottom_padding_size"
        android:paddingBottom="@dimen/row_padding_size"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="@string/reminder_menu_label"
        android:textStyle="bold"
        android:background="@color/budgetBackgroundColor"
        android:textColor="@color/colorTextLight"
        />

    <!--
        This ListView holds all categoriesgets in the main menu
        They consist of single items from budget_list_item.xml
    -->
    <ListView android:id="@+id/reminder_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbarStyle="outsideOverlay"
        android:dividerHeight="@dimen/main_menu_divider_height"
        android:divider="@null"
        />

    <LinearLayout
        android:id="@+id/reminder_layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    </LinearLayout>


</LinearLayout>