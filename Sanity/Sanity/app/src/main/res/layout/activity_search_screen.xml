<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/row_padding_size"
        android:text="Budgets"
        android:textSize="25sp"
        android:background="@color/colorPrimaryDark"/>
    <ListView android:id="@+id/search_budget_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbarStyle="outsideOverlay"
        android:dividerHeight="@dimen/main_menu_divider_height"
        android:divider="@null"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/row_padding_size"
        android:text="Categories"
        android:textSize="25sp"
        android:background="@color/colorPrimaryDark"/>
    <ListView android:id="@+id/search_category_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbarStyle="outsideOverlay"
        android:dividerHeight="@dimen/main_menu_divider_height"
        android:divider="@null"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/row_padding_size"
        android:text="Transactions"
        android:textSize="25sp"
        android:background="@color/colorPrimaryDark"/>
    <ListView android:id="@+id/search_transaction_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbarStyle="outsideOverlay"
        android:dividerHeight="@dimen/main_menu_divider_height"
        android:divider="@null"
        />
</LinearLayout>
